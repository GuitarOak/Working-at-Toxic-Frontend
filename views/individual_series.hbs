{{#if series}}
<div class="individual-grid-container">
    <div class="individual-grid-item">
        <img class="series-image-individual" src='/assets{{series.poster_path}}' alt="{{series.name}} poster not found">
    </div>
    <div class="individual-grid-item">
        <h1>{{series.name}}</h1>
        {{#if series.overview}}
        <h3>Overview:</h3>
        <h4>{{series.overview}}</h4>
        {{else}}
        <h3>Overview: Not availabe</h3>
        {{/if}}
        {{#if series.vote_average}}
        <h3>Rating: {{series.vote_average}}</h3>
        {{else}}
        <h3>Rating: Not availabe</h3>
        {{/if}}
        <h3>First aired: {{series.first_air_date}}</h3>
        <a href="/"><button>Back</button></a>
    </div>
</div>
{{else}}
<h1>Could not display that series</h1>
{{/if}}